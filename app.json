{
	"name": "twitter-drone",
	"description": "JSON stream enhanced bot to automate tweet, retweet, like and follow on Twitter",
	"repository": "https://github.com/redaxmedia/twitter-drone",
	"keywords":
	[
		"stream",
		"twitter",
		"bot"
	],
	"env":
	{
		"TWITTER_API_KEY":
		{
			"required": true
		},
		"TWITTER_API_SECRET":
		{
			"required": true
		},
		"TWITTER_ACCESS_TOKEN":
		{
			"required": true
		},
		"TWITTER_ACCESS_TOKEN_SECRET":
		{
			"required": true
		},
		"COMMAND":
		{
			"required": true
		}
	},
	"formation":
	{
		"web":
		{
			"quantity": 0
		},
		"worker":
		{
			"quantity": 1
		}
	}
}
